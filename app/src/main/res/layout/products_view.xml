<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/detail_shape"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageView_prud"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_prud_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_prud_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:gravity="center|start"
        android:paddingRight="5dp"
        android:text="نام محصول"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/customtextview_prud_mark"
        app:layout_constraintEnd_toStartOf="@+id/imageView_prud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_prud" />

    <TextView
        android:id="@+id/textView_prud_mony"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="120000"
        android:textColor="@color/green2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_prud_present"
        app:layout_constraintEnd_toEndOf="@+id/customtextview_prud_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customtextview_prud_mark" />

    <com.example.topmarket.view.customtextview_prud_mark
        android:id="@+id/customtextview_prud_mark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_prud_mony"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_prud_name"
        tools:text="150000" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingRight="5dp"
        android:text="قیمت اصلی:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/customtextview_prud_mark"
        app:layout_constraintEnd_toEndOf="@+id/textView_prud_name"
        app:layout_constraintEnd_toStartOf="@+id/imageView_prud"
        app:layout_constraintStart_toEndOf="@+id/customtextview_prud_mark"
        app:layout_constraintTop_toTopOf="@+id/customtextview_prud_mark" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="قیمت با تخفیف:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_prud_mony"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView_prud"
        app:layout_constraintStart_toEndOf="@+id/textView_prud_mony"
        app:layout_constraintTop_toTopOf="@+id/textView_prud_mony" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="درصد تخفیف:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_prud_present"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/imageView_prud"
        app:layout_constraintStart_toEndOf="@+id/textView_prud_present"
        app:layout_constraintTop_toBottomOf="@+id/textView_prud_mony"
        app:layout_constraintTop_toTopOf="@+id/textView_prud_present" />

    <TextView
        android:id="@+id/textView_prud_present"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="15"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_prud"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_prud_mony" />

    <Button
        android:id="@+id/button_prud_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/btn_khraid"
        android:padding="2dp"
        android:text="افزودن به سبد خرید"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_quantiti"
        app:layout_constraintTop_toBottomOf="@+id/button_Moshahede"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinner_quantiti"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_prud_add"
        app:layout_constraintEnd_toStartOf="@+id/button_prud_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_prud_add" />

    <Button
        android:id="@+id/button_Moshahede"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/btn_shaow"
        android:text="مشاهده"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/button_mojodkon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shaow"
        android:text="موجود کن"
        android:padding="3dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="3dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewEtmam"
        app:layout_constraintTop_toBottomOf="@+id/button_Moshahede" />

    <TextView
        android:id="@+id/textViewEtmam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_khraid"
        android:gravity="center"
        android:text="تمام شد"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/button_mojodkon"
        app:layout_constraintEnd_toStartOf="@+id/button_mojodkon"
        app:layout_constraintStart_toStartOf="@+id/button_Moshahede"
        app:layout_constraintTop_toTopOf="@+id/button_mojodkon" />

</androidx.constraintlayout.widget.ConstraintLayout>