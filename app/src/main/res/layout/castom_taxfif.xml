<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layouttaxfifha"
    android:layout_width="wrap_content"
    android:layout_height="350dp"
    android:layout_margin="5dp"
    android:background="@drawable/background_shape_white"
    android:translationZ="8dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView_taxfif"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_taxfif_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_taxfif_dis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_taxfif"
        app:layout_constraintTop_toBottomOf="@+id/textView_taxfif_name" />

    <TextView
        android:id="@+id/textView_taxfif_dis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView83"
        app:layout_constraintEnd_toEndOf="@+id/textView_taxfif_price"
        app:layout_constraintStart_toStartOf="@+id/textView_taxfif_price"
        app:layout_constraintTop_toBottomOf="@+id/textView_taxfif_price" />

    <TextView
        android:id="@+id/textView_taxfif_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_taxfif_price"
        app:layout_constraintEnd_toEndOf="@+id/imageView_taxfif"
        app:layout_constraintStart_toStartOf="@+id/imageView_taxfif"
        app:layout_constraintTop_toBottomOf="@+id/imageView_taxfif" />

    <TextView
        android:id="@+id/textView83"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="درصد تخفیف:"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_taxfif_price"
        app:layout_constraintStart_toEndOf="@+id/textView84"
        app:layout_constraintTop_toBottomOf="@+id/textView_taxfif_dis" />

    <TextView
        android:id="@+id/textView84"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView83"
        app:layout_constraintEnd_toStartOf="@+id/textView83"
        app:layout_constraintStart_toStartOf="@+id/textView_taxfif_dis"
        app:layout_constraintTop_toTopOf="@+id/textView83" />

</androidx.constraintlayout.widget.ConstraintLayout>